@{
    ViewData["Title"] = "Mi perfil";
}

<!-- Foto De Perfil -->
<a href='@Url.Action("HomePage","Home")'><img src="/flecha.png" style="width: 60px;"></a>
<div class="container">
      <div class="perfil" style="width: 150px; height: 150px;"><img class="perfil" src="/@BD.UsuarioLogueado.Foto" style="width: 150px; height: 150px;"></div>
  <div class="row">
    <div class="col-sm">

      <div class="nombre"> <h1>Nombre de usuario: @BD.UsuarioLogueado.Nombre</h1> </div> 
      <div class="mail"> <h4>Correo Electrónico: @BD.UsuarioLogueado.mail</h4></div>
    </div>
    <div class="col-md card" style="padding: 12px;">  
      <form style="width: 22rem;" action='@Url.Action("ActualizarPerfil","Home")' method="post" enctype="multipart/form-data">    
        <!-- Cambiar nombre de usuario -->
        <input type="hidden" name="IdUsuario" value="@BD.UsuarioLogueado.idUsuario">
        <div class="form-outline mb-4">
          <label class="form-label" for="form2Example1" style="margin-left: 0px;">Cambiar nombre de usuario</label>
          <input type="text" id="form2Example1" class="form-control" name="nombre" value="@BD.UsuarioLogueado.Nombre">
        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div></div>

        <!-- Cambiar mail -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form2Example1" style="margin-left: 0px;">Cambiar mail</label>
          <input type="email" id="form2Example1" class="form-control" name="mail" value="@BD.UsuarioLogueado.mail">
        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div></div>

        <!-- Cambiar contraseña -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form2Example2" style="margin-left: 0px;">Cambiar contraseña</label>
          <input type="password" id="form2Example2" class="form-control" name="Contraseña" value="@BD.UsuarioLogueado.Contraseña">
        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 64.8px;"></div><div class="form-notch-trailing"></div></div></div>
        
        <!-- Subir foto -->
        <label class="form-label" for="form2Example2" style="margin-left: 0px;">Cambiar foto de perfil</label>
        <input style="margin-bottom: 5%;" type="file" name="MyFile">
        <br>
        <button type="submit" class="btn btn-primary btn-block mb-4">Realizar cambios</button>
      </form>
    </div>
  </div>
</div>