<!-- Lista carpetas con boton que te mande a su contenido  Arreglar pading! -->
<div class="col-2  divlistaarchivos">
    <button type="button" class="btn btn-secondary btn-lg btn-block active"><i class="bi-plus-square"></i> Nuevo</button>
    <div class="divarchivos">
        @{
          if(ViewBag.ListaCarpetas!=null)
          {
            foreach(Carpeta archivo in ViewBag.ListaCarpetas){
              <li class="list-group-item disabled"><p>@archivo.NombreCarpeta</p></li>
            }
          }else{
            <P>No hay archivos todavia</P>
          }
        }
    </div>
</div>

