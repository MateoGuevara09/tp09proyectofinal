@{
    ViewData["Title"] = "Home Page";
}
<!-- Lista carpetas con boton que te mande a su contenido -->
<div class="col-2  divlistaarchivos">
    <form action="" method="post" enctype="multipart/form-data">
      <label for="SubirArchivo" class="btn btn-secondary btn-lg btn-block active">Nuevo</label>
      <input id="SubirArchivo" type="file" name="" style="visibility:hidden;" onclick="MostrarArchivo()">
    </form> 
    <div class="">
      @{
          if(ViewBag.ListaCarpetas.Count != 0)
          {
            foreach(Carpeta archivo in ViewBag.ListaCarpetas){
              <ul>
              <li class="list-group-item disabled"><p>@archivo.NombreCarpeta</p></li>
              </ul>
            }
          }else{
            <P>No hay archivos todavia</P>
          }
        } 
    </div>
</div>


